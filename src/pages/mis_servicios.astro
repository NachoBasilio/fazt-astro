---
import Layout from "../layouts/Layout.astro";
import Tarjeta from "../components/Tarjeta.astro";

interface User {
  userId: number;
  id: number;
  title: string;
  body: string;
}
const response = await fetch("https://jsonplaceholder.typicode.com/posts")
const data = await response.json() as User[]


---


<Layout title="Mis servicios">
    <h1>Algunos de los trabajos que realice:</h1>
    <div>
        {   
            data.map((item) => (
                <Tarjeta title={item.title} body={item.body} />
            ))
        }
    </div>
</Layout>


<style>
    h1 {
        color: white;
        margin-left: 60px;
        font-size: 60px;
    }
    div{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>
</html>