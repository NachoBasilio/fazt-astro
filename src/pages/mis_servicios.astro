---
import Layout from "../layouts/Layout.astro";
import Tarjeta from "../components/Tarjeta.astro";

interface User {
  userId: number;
  id: number;
  title: string;
  body: string;
}
const response = await fetch("https://jsonplaceholder.typicode.com/posts")
const data = await response.json() as User[]


---


<Layout title="Mis servicios">
    <div>
        <h1 class="titulo-sobremi">Algunos de los trabajos que realice</h1>
    </div>
    <div>
        {   
            data.map((item) => (
                <Tarjeta title={item.title} body={item.body} />
            ))
        }
    </div>
</Layout>


<style>
.contenedor-titulo {
  padding: 20px; 
  text-align: center;
}

/* Estilos para el encabezado <h1> con clase "titulo-sobremi" */
h1.titulo-sobremi {
  font-family: 'Helvetica', Arial, sans-serif; /* Fuente del texto */
  font-size: 64px; /* Tamaño de fuente */
  color: #e9e9e9; /* Color del texto */
  text-transform: uppercase; /* Transformación de texto a mayúsculas */
  margin: 0; /* Elimina el margen predeterminado */
  padding: 10px 0; /* Espaciado interno superior e inferior */
}
    div{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>
</html>